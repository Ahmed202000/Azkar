<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".God_Names"
    android:background="@drawable/bak"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" أسماء اللّه الحسني"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#074514"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="110dp"
        android:background="@drawable/ic_pause_black_24dp"
        android:backgroundTint="#000"
        android:padding="5dp"
        android:onClick="pause"/>

        <Button
            android:id="@+id/btn_play_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="190dp"
            android:backgroundTint="#000"
            android:background="@drawable/ic_play_arrow_black_24dp"
            android:padding="5dp"
            android:onClick="play_arrow"/>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/God"
            android:textSize="19dp"
            android:textColor="#ffffff"
            android:padding="8dp"
            android:background="@color/colorPrimary"
            android:layout_margin="5dp"
            />

    </ScrollView>


</LinearLayout>